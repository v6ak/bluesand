[Unit]
Description=Bluetooth service in a separate D-Bus instance
ConditionPathIsDirectory=/sys/class/bluetooth

[Service]
Type=simple

ExecStart=/usr/bin/dbus-run-session --config-file /opt/bluesand/dbus.conf /bin/bash -c 'env DBUS_SYSTEM_BUS_ADDRESS="$DBUS_SESSION_BUS_ADDRESS" /usr/libexec/bluetooth/bluetoothd'
NotifyAccess=main
CapabilityBoundingSet=CAP_NET_ADMIN CAP_NET_BIND_SERVICE
LimitNPROC=1
ProtectHome=true
ProtectSystem=full

[Install]
WantedBy=bluetooth.target
